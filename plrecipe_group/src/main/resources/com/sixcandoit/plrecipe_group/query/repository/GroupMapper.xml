    <!--        SELECT-->
    <!--              A.MEMBER_ID-->
    <!--            , A.MEMBER_EMAIL-->
    <!--            , A.MEMBER_NAME-->
    <!--        FROM member_info A-->
<!--        JOIN group_member B ON A.member_id = B.member_id-->
<!--        WHERE B.group_id = #{groupId}-->
<!--    </select>-->

    <select id="selectPublicOrPrivateGroup" resultMap="groupResultMap">
        SELECT
        A.is_group_public,
        A.group_id,
        A.group_name,
        A.group_create_date,
        A.group_withdrawal_date,
        A.group_comment,
        A.group_status,
        B.member_id
        FROM plrecipe_group A
        JOIN group_member B ON(A.group_id = B.group_id)
        WHERE MEMBER_ID = #{memberId};
    </select>

    <select id="selectMembersByGroupId" resultMap="groupMemberResultMap">
        SELECT
                A.group_member_id,
                A.groupmember_sequence,
                A.invite_state_id,
                A.group_id,
                A.member_id
          FROM group_member A
         WHERE GROUP_ID = #{groupId};
    </select>



</mapper>