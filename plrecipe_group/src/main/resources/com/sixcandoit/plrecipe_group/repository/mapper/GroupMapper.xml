<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sixcandoit.plrecipe_group.repository.mapper.GroupMapper">

    <resultMap id="groupResultMap" type="com.sixcandoit.plrecipe_group.dto.GroupDTO">
        <id property="groupId" column="GROUP_ID"/>
        <result property="groupName" column="GROUP_NAME"/>
        <result property="isGroupPublic" column="IS_GROUP_PUBLIC"/>
        <result property="groupCreateDate" column="GROUP_CREATE_DATE"/>
        <result property="groupWithdrawalDate" column="GROUP_WITHDRAWAL_DATE"/>
        <result property="groupComment" column="GROUP_COMMENT"/>
        <result property="groupStatus" column="GROUP_STATUS"/>
    </resultMap>

    <select id="selectAllGroup" resultMap="groupResultMap">
        SELECT
        A.GROUP_ID
        , A.GROUP_NAME
        , A.IS_GROUP_PUBLIC
        , A.GROUP_CREATE_DATE
        , A.GROUP_WITHDRAWAL_DATE
        , A.GROUP_COMMENT
        , A.GROUP_STATUS
        FROM PLRECIPE_GROUP A
    </select>

    <resultMap id="memberResultMap" type="com.sixcandoit.plrecipe_group.dto.MemberDTO">
        <id property="memberEmail" column="MEMBER_EMAIL"/>
        <result property="memberName" column="MEMBER_NAME"/>
    </resultMap>

    <select id="selectMembersByGroupId" resultMap="memberResultMap" parameterType="int">
        SELECT
        A.MEMBER_EMAIL
        , A.MEMBER_NAME
        FROM member_info A
        JOIN group_member B ON A.MEMBER_EMAIL = B.member_email
        WHERE B.group_id = #{groupId}
    </select>

    <select id="selectPublicOrPrivateGroup" resultMap="groupResultMap">
        SELECT
        A.is_group_public,
        A.group_id,
        A.group_name,
        A.group_create_date,
        A.group_withdrawal_date,
        A.group_comment,
        A.group_status,
        B.member_email
        FROM plrecipe_group A
        JOIN group_member B ON(A.group_id = B.group_id)
        WHERE MEMBER_EMAIL = #{memberEmail};
    </select>
</mapper>