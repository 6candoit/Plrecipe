<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sixcandoit.plrecipe.feature.member.repository.MemberMapper">

    <resultMap id="memberResultMap" type="com.sixcandoit.plrecipe.feature.member.dto.MemberDTO">
        <id property="memberEmail" column="MEMBER_EMAIL"/>
        <result property="password" column="PASSWORD"/>
        <result property="memberName" column="MEMBER_NAME"/>
        <result property="memberNickname" column="MEMBER_NICKNAME"/>
        <result property="memberNumber" column="MEMBER_NUMBER"/>
        <result property="joinDate" column="JOIN_DATE"/>
        <result property="withdrawalDate" column="WITHDRAWAL_DATE"/>
        <result property="memberGrade" column="MEMBER_GRADE"/>
        <result property="memberStatus" column="MEMBER_STATUS"/>
    </resultMap>

    <resultMap id="memberFollowMap" type="com.sixcandoit.plrecipe.feature.follow.dto.FollowDTO">
        <id property="followId" column="FOLLOW_ID"/>
        <result property="userFollow" column="USER_FOLLOW"/>
        <result property="userFollower" column="USER_FOLLOWER"/>
    </resultMap>

    <select id="selectAllMember" resultMap="memberResultMap">
        select * from member_info
    </select>

    <select id="selectMemberByLikePost" parameterType="String" resultMap="memberResultMap">
        SELECT
              B.member_email
            , A.post_id
            , B.post_title
            , B.post_content
            , B.post_date
        FROM POST_LIKE A
        JOIN POST B ON (A.POST_ID = B.POST_ID)
        WHERE B.MEMBER_EMAIL = #{memberEmail};
    </select>

</mapper>