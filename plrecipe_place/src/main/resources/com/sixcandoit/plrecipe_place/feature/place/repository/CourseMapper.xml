<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sixcandoit.plrecipe_place.feature.place.repository.CourseMapper">

    <resultMap id="placeResultMap" type="com.sixcandoit.plrecipe_place.feature.place.entity.Place">
        <id property="placeId" column="place_id"/>
        <result property="placeName" column="place_name"/>
        <result property="placeLocation" column="place_location"/>
    </resultMap>

    <resultMap id="placeResultMap2" type="com.sixcandoit.plrecipe_place.feature.place.entity.Place">
        <id property="placeId" column="PLACE_ID"/>
        <result property="placeName" column="PLACE_NAME"/>
        <result property="placeLocation" column="PLACE_LOCATION"/>
        <result property="placePhoneNum" column="PLACE_PHONE_NUM"/>
        <result property="placeCategoryId" column="PLACE_CATEGORY_ID"/>
    </resultMap>

    <resultMap id="courseResultMap" type="com.sixcandoit.plrecipe_place.feature.place.entity.Course">
        <id property="courseId" column="COURSE_ID"/>
        <result property="courseName" column="COURSE_NAME"/>
        <result property="memberId" column="MEMBER_ID"/>
    </resultMap>

    <resultMap id="coursePlaceResultMap" type="com.sixcandoit.plrecipe_place.feature.place.entity.CoursePlace">
        <id property="placeCourseId" column="PLACE_COURSE_ID"/>
        <association property="course" resultMap="courseResultMap"/>
        <collection property="places" resultMap="placeResultMap2"/>
    </resultMap>

    <select id="selectCoursePlaceByCourseId" parameterType="_int" resultMap="coursePlaceResultMap">
        SELECT
               A.COURSE_ID,
               A.COURSE_NAME,
               A.MEMBER_ID,
               B.PLACE_COURSE_ID,
               C.PLACE_ID,
               C.PLACE_NAME,
               C.PLACE_LOCATION,
               C.PLACE_PHONE_NUM,
               C.PLACE_CATEGORY_ID
          FROM COURSE A
          JOIN COURSE_PLACE B on A.course_ID = B.course_ID
          JOIN PLACE C ON C.PLACE_ID = B.PLACE_ID
         WHERE B.course_id = #{courseId}
         ORDER BY B.PLACE_SEQUENCE;
    </select>

    <select id="getPlacesByCourseName" resultMap="placeResultMap">
        SELECT
              p.place_id,
              p.place_name,
              p.place_location
        FROM place p
          JOIN course_place cp ON p.place_id = cp.place_id
          JOIN course c ON cp.course_id = c.course_id
         WHERE c.course_Id = #{courseId}
    </select>
</mapper>